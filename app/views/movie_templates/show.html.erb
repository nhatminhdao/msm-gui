<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div>
  <a href="/delete_movie/<%= @the_movie.id %>">
    Delete movie
  </a>
</div>

<hr>

<form action="/update_movie/<%= @the_movie.id %>" method="post">
  <div>
    <label for="title">Title</label>
    <input id="title" name="the_title" type="text" value="<%= @the_movie.title %>">
  </div>
  
  <div>
    <label for="year">Year</label>
    <input id="year" name="the_year" type="text" value="<%= @the_movie.year %>">
  </div>
  
  <div>
    <label for="duration">Duration</label>
    <input id="duration" name="the_duration" type="text" value="<%= @the_movie.duration %>">
  </div>
  
  <div>
    <label for="description">Description</label>
    <input id="description" name="the_description" type="text" value="<%= @the_movie.description %>">
  </div>
  
  <div>
    <label for="image">Image</label>
    <input id="image" name="the_image" type="text" value="<%= @the_movie.image %>">
  </div>
  
  <div>
    <label for="director_id">Director ID</label>
    <input id="director_id" name="the_director_id" type="text" value="<%= @the_movie.director_id %>">
  </div>
  
  <button>Update movie</button>

</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <% if the_director == nil%>
        "Uh oh! We weren't able to find a director for this movie."
    <%else %> 
        <%= the_director.name %>
    <%end%>

  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
