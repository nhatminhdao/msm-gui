<h1>
  List of all directors
</h1>

<hr>

<form action="/insert_director" method="post">
  <div>
    <label for="name">Name</label>
    <input id="name" name="the_name" type="text">
  </div>
  
  <div>
    <label for="dob">Dob</label>
    <input id="dob" name="the_dob" type="date">
  </div>
  
  <div>
    <label for="bio">Bio</label>
    <input id="bio" name="the_bio" type="text">
  </div>
  
  <div>
    <label for="image">Image</label>
    <input id="image" name="the_image" type="text">
  </div>
    
  <button>Create director</button>

</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
